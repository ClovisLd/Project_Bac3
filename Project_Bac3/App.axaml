<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Project_Bac3.App"
             xmlns:local="using:Project_Bac3"
             xmlns:vm="using:Project_Bac3.ViewModels"
             xmlns:views="using:Project_Bac3.Views"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <DataTemplate DataType="{x:Type vm:HomeWindowViewModel}">
            <views:HomeWindowView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddPlayerWindowViewModel}">
            <views:AddPlayerWindowView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MatchWindowViewModel}">
            <views:MatchWindowView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CompetitionWindowViewModel}">
            <views:CompetitionWindowView /> 
        </DataTemplate>
    </Application.DataTemplates>
  
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

</Application>