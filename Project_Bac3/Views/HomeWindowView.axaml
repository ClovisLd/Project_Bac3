<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Project_Bac3.ViewModels"
             x:Class="Project_Bac3.Views.HomeWindowView"
             x:DataType="vm:HomeWindowViewModel"
             x:Name="Root">

    <Grid Margin="20">
        
        <!-- =========================== -->
        <!-- 1. THE LIST (Normal View)   -->
        <!-- =========================== -->
        <StackPanel IsVisible="{Binding !IsEditing}" Spacing="10">
            
            <!-- Search Bar (Styled like your screenshot) -->
            <TextBox Text="{Binding SearchText}" 
                     Watermark="Search player..."
                     Background="Black"
                     Foreground="White"
                     BorderBrush="#444"
                     CornerRadius="3">
                <TextBox.KeyBindings>
                    <KeyBinding Gesture="Enter" Command="{Binding UpdateFilterCommand}"/>
                </TextBox.KeyBindings>
            </TextBox>

            <ListBox ItemsSource="{Binding Filtered_Players}" Height="500" Background="Transparent">
                <ListBox.Styles>
                    <!-- Removes hover blue background -->
                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListBox.Styles>
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!-- Dark Grey Card -->
                        <Border Background="#333333" CornerRadius="3" Padding="15" Margin="0,5">
                            <Grid ColumnDefinitions="*, Auto">
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="White" 
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                
                                <Button Grid.Column="1" 
                                        Content="Edit" 
                                        Background="#555"
                                        Foreground="White"
                                        Command="{Binding #Root.DataContext.StartEditCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- =========================== -->
        <!-- 2. THE EDIT POPUP (Styled)  -->
        <!-- =========================== -->
        <!-- This overlays the list when editing -->
        <Border IsVisible="{Binding IsEditing}" 
                Background="Black" 
                BorderBrush="#666"
                BorderThickness="1"
                CornerRadius="5" 
                Padding="30"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Width="500"
                BoxShadow="0 0 50 10 Black">
            
            <StackPanel Spacing="15">
                <TextBlock Text="Edit Player" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <!-- NAME -->
                <StackPanel>
                    <TextBlock Text="Name:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditName}" Background="Black" Foreground="White" BorderBrush="#555"/>
                </StackPanel>

                <!-- AGE -->
                <StackPanel>
                    <TextBlock Text="Age:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <NumericUpDown Value="{Binding EditAge}" Minimum="0" Background="Black" Foreground="White" BorderBrush="#555"/>
                </StackPanel>

                <!-- CONTACT -->
                <StackPanel>
                    <TextBlock Text="Contact:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditContact}" Background="Black" Foreground="White" BorderBrush="#555"/>
                </StackPanel>

                <!-- DESCRIPTION -->
                <StackPanel>
                    <TextBlock Text="Description:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EditDescription}" Height="80" AcceptsReturn="True" 
                             Background="Black" Foreground="White" BorderBrush="#555" 
                             TextWrapping="Wrap"/>
                </StackPanel>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,20,0,0">
                    <!-- Save Button (Dark Grey to match your Add Button) -->
                    <Button Command="{Binding SaveEditCommand}" 
                            Content="Save Changes"
                            Background="#333"
                            Foreground="White"
                            Padding="20,10"
                            BorderBrush="#555"
                            BorderThickness="1"/>
                    
                    <!-- Cancel Button -->
                    <Button Command="{Binding CancelEditCommand}" 
                            Content="Cancel" 
                            Background="Transparent"
                            Foreground="#AAA"
                            Padding="20,10"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</UserControl>